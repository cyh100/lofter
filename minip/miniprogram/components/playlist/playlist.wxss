.playlist-item-container {
    width: 220rpx;
    position: relative;
    padding-bottom: 20rpx;
    color: #333;
}

.playlist-item-img{
    width: 220rpx;
    height: 220rpx;
    border-radius: 10rpx;
}

.playlist-item-count {
    position: absolute;
    top: 0rpx;
    right: 4rpx;
    color: #fff;
    font-size: 22rpx;
    padding-left: 26rpx;
    background: url(data:image/svg+xml;base64,) no-repeat 0 8rpx/22rpx 20rpx;
}

.playlist-item-name {
    font-size: 26rpx;
    line-height: 1.2;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
}