.container{
    background-color: #eee;
    padding-bottom: 20rpx
}


/* 博客编辑区域 */
.microblog-container{
    background-color: #fff;
    padding: 15rpx 0 15rpx 15rpx;
}
.microblog-container .textarea-content {
    width: 98%;
    height: 200rpx;
    line-height: 50rpx;
    font-size: 28rpx;
    border-radius: 10rpx;
}
.microblog-container .value-length {
    margin-bottom: 10rpx;
    height: 30rpx;
    line-height: 30rpx;
    font-size: 20rpx;
    color: #999;
}
.microblog-container .img-container {
    display: flex;
    flex-wrap: wrap;
}
.microblog-container .img-container .img-select-container {
    width: 33.3%;
    height: 220rpx;
    padding-right: 15rpx;
    padding-bottom: 15rpx;
    box-sizing: border-box;
    position: relative;
}
.microblog-container .img-container .img-select-container image{
    width: 100%;
    height: 100%;
    border: 2rpx solid #ccc;
}
.microblog-container .img-container .img-select-container .icon-delete1 {
    position: absolute;
    top: 0;
    right: 15rpx;
    padding: 0 0 6rpx 6rpx;
    font-size: 22rpx;
    color: rgba(255, 0, 0, 0.7);
    z-index: 9;
}
.microblog-container .img-container .select .icon-border{
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2rpx solid #ccc;
    width: 100%;
    height: 100%;   
}
.microblog-container .img-container .img-select-container .icon-62tianjia {
    font-size: 80rpx;
    color: #ccc;
}

/* 提交按钮区域 */
.send-container .send-btn {
    width: 110rpx;
    padding: 0 2rpx;
    margin-top: 10rpx;
    margin-right: 15rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 28rpx;
    color: #fff;
    background-color: rgba(255, 0, 0, 0.7);
}


/* 提交选项区域 */
.send-options-container {
    margin-top: 20rpx;
    padding: 0 10rpx;
    color: #666;
    background-color: #fff;
}
.send-options-items {
    display: flex;
    height: 60rpx;
    align-items: center;
    border-bottom: 1rpx solid #eee;
}