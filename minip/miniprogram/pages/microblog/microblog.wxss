.header {
    position: fixed;
    top: 0rpx;
    left: 0;
    width: 100%;
    height: 90rpx;
    display: flex;
    align-items: center;
    z-index: 9;
    background-color: #fff;
}
.header .edit-container {
    margin-left: 10rpx;
    padding: 2rpx 4rpx 2rpx 2rpx;
    height: 46rpx;
    text-align: center;
    vertical-align: middle;
    background-color: rgba(255, 0, 0, 0.7);
    color: #fff;
}
.header .edit-container .icon-blog{
    font-size: 32rpx;
}
.header .edit-container .edit-text {
    font-size: 26rpx;
}
.header .search-container {
    flex: 1;
}


