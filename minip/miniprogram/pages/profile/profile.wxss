page {
    background-color: #eee;
}

.userInfo-container {
    display: flex;
    align-items: center;
    height: 360rpx;
    color: #fff;
    background-color: rgba(255, 0, 0, 0.7);
}

.avatar-container {
    width: 280rpx;
    margin-left: 30rpx;
    border-radius: 20rpx;
    overflow: hidden;
}

.avatar {
    display: block;
    width: 280rpx;
    height: 280rpx;
}

.userInfo {
    flex: 1;
    padding: 0 30rpx;
}

.sub-text {
    margin: 18rpx 0;
    font-size: 26rpx;
    line-height: 1.2rem;
    color: #f1f1f1;
}

.card-container {
    margin: 50rpx;
    border-radius: 30rpx;
    color: #fff;
    background-color: rgba(255, 0, 0, 0.7);
}

.list {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100rpx;
    padding: 10rpx;
    font-size: 36rpx;
    border-bottom: 2rpx solid #f5f5f5;
}

.icon-1 {
    padding-left: 20rpx;
    text-align: left;
}
.icon-2 {
    font-size: 50rpx;
}

.icon-music {
    font-size: 40rpx;
    margin-left: -6rpx;
}

.icon-blog {
    font-size: 45rpx;
    font-weight: 500;
    margin-left: -8rpx;
}

.iocn-code {
    margin-left: 18rpx;
}